%header
  %h1 
    MemorYsta
    %span#tag-placeholder
  %p.small play memory with instagram pictures! by <a href="/">@stecb</a>
  .fb-like{data: {href: 'http://stecb.ninja/memorysta', layout: :button, :'show-faces' => true, action: :like, share: :true}}
  <a href="https://twitter.com/share" class="twitter-share-button" data-text="http://stecb.ninja/memorysta Play #MemorYsta! The #memory game with #instagram photos!!" data-via="stecb">Tweet</a>


.game-controls
  .time
    %i.fa.fa-clock-o
    %span#time 00:00
  .points
    %i.fa.fa-dot-circle-o
    %span#points 0
    %span.label points
  %button#restart.btn.btn-danger.btn-sm.btn-circular{type: :button}
    %i.fa.fa-refresh

.game-options
  .form-group
    %input#hashtag.form-control.input-lg{type: :text, placeholder: 'type whatever hashtag'}
  .form-group
    %label.checkbox-inline
      %input#easy{type: :radio, value: :easy, name: :level, checked: :checked} easy
    %label.checkbox-inline
      %input#medium{type: :radio, value: :medium, name: :level} medium
    %label.checkbox-inline
      %input#difficult{type: :radio, value: :difficult, name: :level} difficult
  .form-group
    %button#play.btn.btn-success{type: :button} PLAY

