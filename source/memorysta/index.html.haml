.status-panel.status-loading
  .wrap
    %span 
      ="...loading..."
      %br
      %i.fa.fa-circle-o-notch.fa-spin
.status-panel.status-won
  .wrap
    %span
      YOU WON!
      %i.fa.fa-smile-o
      %button.btn.btn-sm.btn-success#playagain
        %i.fa.fa-refresh
        play again
      #tw-share-placeholder

#board-wrapper
  #board